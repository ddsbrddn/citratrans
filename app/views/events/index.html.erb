<h1>Events</h1>

<table class="table table-striped table-hover .table-responsive">
	<thead>
		<tr>
			<th>Event</th>
			<th>Organisasi</th>
			<th>Lokasi</th>
			<th>Tanggal Event</th>
			<th>Note</th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		<% @events.each do |event| %>
	    <tr>
	      <td><%= event.event_type %></td>
	      <td><%= link_to event.organization, event_path(event), remote: true, "data-target" => "edit_event"  %></td>
				<td><%= event.location %></td>
				<td><%= event.start.strftime("%d/%m/%Y")  %> -- <%= event.end.strftime("%d/%m/%Y") %></td>
				<td><%= event.note %></td>
				<td>
			    <%= link_to 'Delete', event, remote: true, :method => :delete, data: {confirm: "Delete Event: #{event.organization} #{event.event_type}"}, :class => 'btn btn-xs btn-danger pull-right' %>
			  </td>
	    </tr>
	  <% end %>
	</tbody>
</table>
